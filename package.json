{
  "name": "debounce-utility",
  "version": "2.0.0",
  "description": "Improved debounce utility with TypeScript support and modern JavaScript",
  "main": "utils.js",
  "types": "utils.ts",
  "scripts": {
    "test": "node test_utils.js",
    "test:ts": "ts-node test_utils.ts",
    "build": "tsc utils.ts --outDir dist",
    "lint": "eslint utils.js utils.ts",
    "format": "prettier --write *.js *.ts"
  },
  "keywords": [
    "debounce",
    "utility",
    "typescript",
    "javascript",
    "throttle",
    "performance"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
